 body
 	font-size 16Px
 .body-bg
 	background #001739 url(../img/hico4.png) center top/100% auto no-repeat
.header
	background url(../img/hico5.png) center top/ 100% auto no-repeat
	height 95px
	overflow hidden
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	padding-bottom 17px
	img
		display block
		width 100%
	.brand
		margin 12px 0 0 23px
		display block
		width 220px
	.title
		margin 11px 0 0 45px
		display block
		width 210px
	.progress
		margin 30px 0 0 40px
		padding 0 10px
		height 36px
		border-radius 16px
		font-size 18px
		color #fff
		line-height 36px
		text-align center
		background linear-gradient(to bottom,#bf0000 0%,#ff4343 50%,#ff0505 100%) center top no-repeat
.main
	.list
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		justify-content space-around
		.item
			position relative
			margin-top 20px
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			flex-direction column
			justify-content flex-end
			width 122px
			height 122px
			padding 35px
			background url(../img/hico7.png) center center/100% 100% no-repeat content-box
			font-size 12px
			color #fff
			text-align center
			p
				color #f3ff33
				padding-bottom 0px
			.text
				height 50px
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				flex-direction column
				align-items center
				justify-content center
			.layout
				position absolute
				z-index -1
				left 0
				right 0
				top 0
				bottom 0
				background url(../img/hico6.png) 65% 75%/210px auto no-repeat
	.scroll-wrap
		margin 50px auto 20px
		width 660px
		height 370px
		border 1px solid #424c79
		border-radius 5px
		padding 25px
		font-size 24px
		color #fff
		line-height 2
		text-align center
		.wrap
			width 100%
			height 100%
			overflow hidden
		span
			padding 0 10px
			color #ffcf2e
	.link-group
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		border-bottom 1px solid #424c79
		a
			flex 0 0 33.33%
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			justify-content center
			box-sizing border-box
			font-size 28px
			color #fff
			line-height 100px
			height 100px
			border-top 1px solid #424c79
			border-right 1px solid #424c79
			img
				display block
				padding-right 10px
			.w48
				width 48px
			.w42
				width 42px
			.w50
				width 50px
			.w41
				width 41px
			.w49
				width 49px
	.child-page
		padding 0 15px
		h3
			padding 50px 0 40px
			font-size 32px
			color #ffcf2e
			text-align center
			border-bottom 1px dotted #ffcf2e
		.content
			padding 30px 15px 50px
			font-size 20px
			color #fff
			line-height 2
			.pt30
				padding-top 30px
		.form
			width 708px
			margin 0 auto 20px
			border 1px solid #424c79
			border-radius 5px
			padding-top 30px
			form
				display block
			.row
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				padding-bottom 30px
				height 60px
				align-items center
				justify-content flex-start
				font-size 20px
				color #fff
				.w20
					width 204px
					min-height 1px
					text-align right
				.w80
					position relative
					width 385px
					height 60px
					background #fff
					border-radius 5px
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					align-items center
					justify-content flex-start
					.code
						position absolute
						right 10px
						top 50%
						transform translateY(-50%);
						width 80px
					&.submit
						width 330px
						height 80px
						border-radius 10px
						background linear-gradient(to bottom,#f9c900 0%,#ee6a00 100%) center top /100% 100% no-repeat
						input
							width 100%
							height 100%
							background none
							padding 0
							line-height 80px
							text-align center
							font-size 32px
							color #fff
							cursor pointer
					input
						background none
						outline none
						border none
						font-size 20px
						color #000
						line-height 26Px
						padding 10px
						height 26Px
						box-sizing border-box
						width 100%
						&::placeholder
							color #8d8d8d
						
.footer
	padding 30px 0 20px
	text-align center
	font-size 24px
	color #5d6587
	line-height 2



.al-box
	position: fixed
	left: 0
	top: 0
	width: 100%
	height: 100%
	background-color: rgba(0,0,0,.6)
	z-index: 2
	display: none
	.layout
		width: 536px
		height: 562px
		background: #080d42
		border: 3px solid #c8a442
		position: absolute
		left: 50%
		top: 50%
		border-radius: 8px
		transform translate(-50%, -50%)
		h2
			a
				margin:10px 10px 0 0
				cursor: pointer
				img
					width 17px
					transition: .3s
					&:hover
						transform: rotate(180deg)
		h3
			text-align: center
			img
				width 232px
				
		h4
			text-align: center
			font-size: 48px
			color: #fff
			font-family: "Impact"
			margin-top: 32px
		ul
			border-top: 1px dotted #45433b
			margin-top: 42px
			padding: 25px 0 30px
			li
				width: 100%
				margin-top: 17px
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
				span
					color: #cda846
					float: left
					width: 7em
					text-align: right
					margin-right: 10px
					line-height: 44px
					
				select
					width: 280px
					height: 44px
					border: 1px solid #665545
					border-radius: 6px
					background: #0a0a0a
					padding-left: 10px
					color: #e0ac24
					font-size: 12px
					outline none
					box-sizing border-box
					
				input
					width: 280px
					height: 44px
					border: 1px solid #665545
					border-radius: 6px
					background: #0a0a0a
					color: #e0ac24
					font-size: 12px
					padding-left: 10px
					box-sizing border-box
					outline none
					&::placeholder
						color: #564f3e
						
				var
					color: #cd0000
					font-size: 18px
					margin-left: 6px
					position: relative
					top: 10px
					
		strong
			display: block
			font-weight: normal
			text-align: center
			border-top: 1px dotted #45433b
			padding-top: 20px
			
			a
				display: inline-block
				color: #fff
				vertical-align: middle
				margin: 0 10px
				
			.a0
				width:234px
				height: 79px
				background-image: url(../img/ico5.png)
				background-size 100% 100%
				color: #3a210a
				text-align: center
				font-size 28px
				color #3a210a
				line-height 79px
			.a1
				width: 115px
				height: 39px
				background-image: url(../img/ico6.png)
				text-align: center
				line-height: 39px
				
